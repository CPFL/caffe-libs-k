#
# Makefile.K
#
#
# If you compile, change the name to Makefile.in.
#
#
 
#-----------------------------------------------------------------------------
# Shell
#-----------------------------------------------------------------------------

SHELL = /bin/sh

#-----------------------------------------------------------------------------
# Platform
#-----------------------------------------------------------------------------

PLAT = K

#-----------------------------------------------------------------------------
# Libraries and includs
#-----------------------------------------------------------------------------
 
BLLIB = -lfjlapack -SSL2
CBLIB = $(HOME)/install/usr/local/lib/libcblas_$(PLAT).a
CBLIBSO = $(HOME)/install/usr/local/lib/libcblas_$(PLAT).so

#-----------------------------------------------------------------------------
# Compilers
#-----------------------------------------------------------------------------

CC = fccpx
FC = frtpx
LOADER = $(CC)

#-----------------------------------------------------------------------------
# Flags for Compilers
#-----------------------------------------------------------------------------

CFLAGS = -Kfast -KPIC -Xg -DADD_
FFLAGS = -Kfast -KPIC  

#-----------------------------------------------------------------------------
# Archive programs and flags
#-----------------------------------------------------------------------------

ARCH = ar
ARCHFLAGS = r
RANLIB = echo
